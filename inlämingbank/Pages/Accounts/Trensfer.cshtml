@page
@model inlämningbank.Pages.Accounts.TrensferModel
@{
}


<link rel="stylesheet" href="~/css/Style.css">
<link rel="stylesheet" href="~/css/tranfer.css">
<div class="card transfer-card "
     style="margin-top: 35px; margin-bottom: 35px; ">
    <div class="">
        <h1 class="card-title" style="color:#24527a;">Transfer</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="@Model.Q" />
            <input type="hidden" asp-for="@Model.Customers" />
            <button class="btn-theme" type="submit" value="Search" asp-page-handler="Search" asp-route-accountId="@Model.AccountId">Search</button>
        </form>
        <div class="scroll-box" style="margin-top: 10px; margin-bottom: 10px;">
            <ul>
                @if (Model.ToAccounts != null)
                {
                    foreach (var account in Model.ToAccounts)
                    {
                        <li style="text-align: center; margin-bottom: 5px">
                            Name: @account.ToGivenname @account.ToLastname <br/>
                            Account Number: @account.ToaccountId
                        </li> 
                    }
                }
            </ul>
        </div>

        <form method="post">
            <div class="form-group">
                <label class="form-label" asp-for="ToAccountId">Recipient's Account Number</label>
                <input class="form-control" asp-for="ToAccountId" />
                <span class="text-danger" asp-validation-for="ToAccountId"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Amount">Amount</label>
                <input class="form-control" asp-for="Amount"/>
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Comment">Comment</label>
                <input class="form-control" asp-for="Comment"/>
                <span class="text-danger" asp-validation-for="Comment"></span>
            </div>
            <div style="display: flex; justify-content: center;">
            <button type="submit" asp-page-handler="Transfer" asp-route-accountId="@Model.AccountId" class="btn-theme">Transfer</button>
            </div>
        </form>
    </div>
</div>
