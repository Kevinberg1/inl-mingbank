@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<div id="menu-links" class="links">
@if (SignInManager.IsSignedIn(User))
{
    <div class="links">
        <a  class="link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </div>
    <div class="links">
        <form class="link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                <button type="submit" class="btn-theme">Logout</button>
        </form>
    </div>
}
else
{
    <div class="links">
        <a class="link btn-theme"  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
</div>
