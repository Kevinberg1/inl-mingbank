@page
@model inlämingbank.Pages.CustomersModel
@{
}
<link rel="stylesheet" href="~/css/table.css">

<h1 class="header">Alla Customers</h1>
<h3 class="page-header">Page @Model.CurrentPage</h3>
@*Search*@
<form method="get">
    <input asp-for="@Model.Q" />
    <input type="hidden" asp-for="@Model.Customers" />
    <input type="submit" value="Search" />
</form>
<div><a class="btn-theme back-customers" onclick="window.history.back()"> Back</a></div>

<body>
    <table class="table-bigbox">
        <thead>
            <tr class="table-box">
                <th class="table-text">
                    CustomerId<a asp-page="/Customers"
                                 asp-route-sortColumn="CustomerId"
                                 asp-route-sortOrder="asc"
                                 style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-sortColumn="CustomerId"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>

                <th class="table-text">
                    Name
                    <a asp-page="/Customers"
                       asp-route-sortColumn="Givenname"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-sortColumn="Givenname"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>

                </th>
                <th class="table-text">
                    NationalId
                    <a asp-page="/Customers"
                       asp-route-sortColumn="NationalId"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-sortColumn="NationalId"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th class="table-text">
                    Streetaddress
                    <a asp-page="/Customers"
                       asp-route-sortColumn="Streetaddress"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-sortColumn="Streetaddress"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th class="table-text">
                    City
                    <a asp-page="/Customers"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var supp in Model.Customers)
            {
                <tr>
                    <td>@supp.CustomerId</td>
                    <td>@supp.Givenname @supp.Surname</td>
                    <td>@supp.NationalId</td>
                    <td>@supp.Streetaddress</td>
                    <td>@supp.City</td>
                    <td><a class="btn-theme" asp-route-customerId="@supp.CustomerId" asp-page="/Customer"> Info</a></td>
                </tr>
            }
            <tr>
                <td style="display: flex; justify-content: end;">
                    @if (Model.CurrentPage != 1)
                    {

                        <a class="btn-theme" 
                       asp-page="/Customers" asp-route-customers="@Model.Customers"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-pageNo="@(Model.CurrentPage - 1)">
                            Prev

                        </a>
                    }
                </td>
                <td></td>
                <td></td>
                <td>
                <td>
                    <a class="btn-theme"
                       asp-page="/Customers" asp-route-customers="@Model.Customers"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-pageNo="@(Model.CurrentPage + 1)">
                        Next
                    </a>
                </td>
                </td>
            </tr>

        </tbody>
    </table>

</body>